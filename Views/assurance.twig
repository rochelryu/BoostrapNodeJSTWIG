{% include 'Include/header.twig' %}

<div class="content-main">

    <div class="banner">
        <h2>
            <a href="/ryu">Accueil</a>
            <i class="fa fa-angle-right"></i>
            <span>Assurance</span>
        </h2>
    </div>
    <div class="container-fluid">
        <div class="row bg-blank">
            <div class="col-md-6 sante">
                <h2> Sante </h2>

                <table id="sante" class="table table-hover dashboard-task-infos table-bordered">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>nom</th>
                            <th>prenoms</th>
                            <th>état</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in info.sante %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{item.name}}</td>
                            <td>{{item.firstname}}</td>
                            <td>
                            {% if item.etat == 2 %}
                                <span class="label bg-green">Déjà Fait</span>
                            {% else %}
                                <span class="label bg-red">Pas encore</span>
                            {% endif %}
                             </td>
                            <td>
                            <a target='_blank' href="/ryu/details/{{item.recovery}}?l=1">
                            Voir Plus  
                            </a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
        
            </div>
